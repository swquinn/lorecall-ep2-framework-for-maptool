[h:tokenId=currentToken()]
[h:stress=character.getPropertyWithDefault("Stress", 0)]
[h:lucidity=character.getLucidity()]

[h:editLink=macroLinkText("SimplePropertyEditor@this", "", "Stress", tokenId)]
<section class="cs-stress">
  <div class="clearfix">
    <a href="[r:editLink]" class="edit-action">
      <i class="icon">[r:icons.edit()]</i>
    </a>
  </div>

  <span class="token-property">[r:stress] / [r:lucidity]</span>
  <label>STRESS</label>
</section>
